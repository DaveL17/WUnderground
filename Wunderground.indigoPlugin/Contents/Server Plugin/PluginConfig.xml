<?xml version="1.0"?>
<PluginConfig>
  <Field
    id = "infoLabel00"
    type = "label"
    fontSize = "large">
    <Label>WUnderground Plugin</Label>
  </Field>

  <Field
    id = "space00"
    type = "label"
    fontSize = "small">
    <Label>Developed by DaveL17</Label>
  </Field>

  <Field
    id = "termsOfService"
    type = "label"
    fontSize = "mini">
    <Label>Data provided by Weather Underground, LLC. This plugin and its author are in no way affiliated with Weather Underground.</Label>
  </Field>

  <Field
    id = "separator00"
    type = "separator"/>

  <Field
    id = "showPluginSettings"
    type = "checkbox"
    tooltip = "Check to show plugin settings.">
    <Label>Plugin Settings:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "space01"
    type = "label"
    fontSize = "small">
    <Label>The plugin requires an API key to retrieve data from Weather Underground.</Label>
  </Field>

  <Field
    id = "apiKey"
    type = "textfield"
    defaultValue = "apiKey"
    visibleBindingId = "showPluginSettings"
    visibleBindingValue = "true"
    tooltip = "Please enter the Weather Underground API Key (required).">
    <Label>API key:</Label>
  </Field>

