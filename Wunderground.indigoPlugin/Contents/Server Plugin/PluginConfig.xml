  <Field
    id = "separator01"
    type = "separator"/>

  <Field
    id = "showDownloadSettings"
    type = "checkbox"
    tooltip = "Check to show download settings.">
    <Label>Download Settings:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "space02"
    type = "label"
    fontSize = "small">
    <Label>Controls how often the plugin will reach out to Weather Underground, and the daily limit for the number of downloads.</Label>
  </Field>

  <Field
    id = "downloadInterval"
    type = "menu"
    defaultValue = "900"
    visibleBindingId = "showDownloadSettings"
    visibleBindingValue = "true"
    tooltip = "Please enter the desired frequency for data downloads.">
    <Label>Interval:</Label>
    <List>
      <Option value = "300">5 Minutes</Option>
      <Option value = "600">10 Minutes</Option>
      <Option value = "900">15 Minutes</Option>
      <Option value = "1800">30 Minutes</Option>
      <Option value = "3600">1 Hour</Option>
      <Option value = "21600">6 Hours</Option>
      <Option value = "43200">12 Hours</Option>
      <Option value = "86400">1 Day</Option>
    </List>
  </Field>

  <Field
    id = "callCounter"
    type = "textfield"
    defaultValue = "500"
    visibleBindingId = "showDownloadSettings"
    visibleBindingValue = "true"
    tooltip = "Please enter the maximum number of WU calls for your plan. The base developer plan is 500 downloads per day.">
    <Label>Limit:</Label>
  </Field>

  <Field
    id = "ignoreEstimated"
    type = "checkbox"
    defaultValue = "false"
    visibleBindingId = "showDownloadSettings"
    visibleBindingValue = "true"
    tooltip = "If checked, the plugin will not update weather data if Weather Underground reports that the data are estimated.">
    <Label> </Label>
    <Description>Skip Update if Estimated</Description>
  </Field>

  <Field
    id = "separator02"
    type = "separator"/>

  <Field
    id = "showTemperatureSettings"
    type = "checkbox"
    tooltip = "Check to show value precision settings.">
    <Label>Value Precision:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "space03"
    type = "label"
    fontSize = "small">
    <Label>Controls the precision of certain values displayed by Indigo.</Label>
  </Field>

  <Field
    id = "itemListTempDecimal"
    type = "menu"
    defaultValue = "1"
    visibleBindingId = "showTemperatureSettings"
    visibleBindingValue = "true"
    tooltip = "Please select the desired number of decimal places to display for temperature values in the item list (main list of Indigo devices.)">
    <Label>Item List (temperature):</Label>
    <List>
      <Option value = "0">0 decimal places</Option>
      <Option value = "1">1 decimal place</Option>
    </List>
  </Field>

  <Field
    id = "uiTempDecimal"
    type = "menu"
    defaultValue = "1"
    visibleBindingId = "showTemperatureSettings"
    visibleBindingValue = "true"
    tooltip = "Please select the desired number of decimal places to display for temperature values in control pages.">
    <Label>UI Value (temperature):</Label>
    <List>
      <Option value = "0">0 decimal places</Option>
      <Option value = "1">1 decimal place</Option>
    </List>
  </Field>

  <Field
    id = "uiHumidityDecimal"
    type = "menu"
    defaultValue = "1"
    visibleBindingId = "showTemperatureSettings"
    visibleBindingValue = "true"
    tooltip = "Please select the desired number of decimal places to display for humidity values in control pages.">
    <Label>UI Value (humidity):</Label>
    <List>
      <Option value = "0">0 decimal places</Option>
      <Option value = "1">1 decimal place</Option>
    </List>
  </Field>

  <Field
    id = "uiWindDecimal"
    type = "menu"
    defaultValue = "1"
    visibleBindingId = "showTemperatureSettings"
    visibleBindingValue = "true"
    tooltip = "Please select the desired number of decimal places to display for wind values in control pages.">
    <Label>UI Value (wind):</Label>
    <List>
      <Option value = "0">0 decimal places</Option>
      <Option value = "1">1 decimal place</Option>
    </List>
  </Field>

  <Field
    id = "separator03"
    type = "separator"/>

  <Field
    id = "showAlertSettings"
    type = "checkbox"
    tooltip = "Check to show alert logging settings.">
    <Label>Alert Logging:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "space04"
    type = "label"
    fontSize = "small">
    <Label>Controls whether the plugin will write severe weather alert information to the log.</Label>
  </Field>

  <Field
    id = "alertLogging"
    type = "checkbox"
    defaultValue = "false"
    visibleBindingId = "showAlertSettings"
    visibleBindingValue = "true"
    tooltip  =  "Enables (disables) logging of severe weather alerts. Checking this box means that you do want to see severe weather alerts in the log. This setting applies to all weather devices.">
    <Label>Log active alert messages:</Label>
    <Description>Check to enable.</Description>
  </Field>

  <Field
    id = "noAlertLogging"
    type = "checkbox"
    defaultValue = "false"
    visibleBindingId = "showAlertSettings"
    visibleBindingValue = "true"
    tooltip  =  "Hides (shows) log message when there are no severe weather alerts. Checking this box means that you do not want to see these messages in the log. This setting applies to all weather devices.">
    <Label>Hide "No Alert" messages:</Label>
    <Description>Check to enable.</Description>
  </Field>

  <Field
    id = "separator04"
    type = "separator"/>

  <Field
    id = "showNotificationSettings"
    type = "checkbox"
    tooltip = "Check to show update notification settings.">
    <Label>Update Notification:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "space05"
    type = "label"
    fontSize = "small">
    <Label>Receive an email alerting you to plugin updates. This sends email through Indigo, so this option must be configured as well. You can also elect to receive a daily weather summary via email (enable in weather device settings.) </Label>
  </Field>

  <Field
    id = "updaterEmailsEnabled"
    type = "checkbox"
    defaultValue = "false"
    visibleBindingId = "showNotificationSettings"
    visibleBindingValue = "true"
    tooltip  =  "Enables (disables) email notifications.">
    <Label> </Label>
    <Description>Enable/Disable</Description>
  </Field>

  <Field
    id = "updaterEmail"
    type = "textfield"
    visibleBindingId = "updaterEmailsEnabled"
    visibleBindingValue = "true"
    tooltip = "Please enter the email address to receive notifications of updates to the plugin.">
    <Label>Email address:</Label>
  </Field>

  <Field
    id = "separator05"
    type = "separator"/>

  <Field
    id = "showDebugSettings"
    type = "checkbox"
    tooltip = "Check to show debug settings.">
    <Label>Debugging:</Label>
    <Description>Show/Hide</Description>
  </Field>

  <Field
    id = "showDebugInfo"
    type = "checkbox"
    visibleBindingId = "showDebugSettings"
    visibleBindingValue = "true"
    tooltip = "Enabling will result in verbose logging.">
    <Label> </Label>
    <Description>Enable/Disable</Description>
  </Field>

  <Field
    id = "showDebugLevel"
    type = "menu"
    defaultValue = "1"
    visibleBindingId = "showDebugSettings"
    visibleBindingValue = "true"
    tooltip = "Controls the amount of debug information written to the log.">
    <Label>Debug level:</Label>
    <List>
      <Option value = "1">Low</Option>
      <Option value = "2">Medium</Option>
      <Option value = "3">High</Option>
    </List>
  </Field>

  <Field
    id = "space06"
    type = "label"
    visibleBindingId = "showDebugSettings"
    visibleBindingValue = "true"
    fontSize = "small">
	<Label>Turn on debugging only when needed. Be careful when posting the output to the forums or other public places as it could expose sensitive information.

  Low = Minimal debugging.
  Medium = All debug logging except sensitive information.
  High = May contain sensitive information.</Label>
  </Field>

</PluginConfig>
