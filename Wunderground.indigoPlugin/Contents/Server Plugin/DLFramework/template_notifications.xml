<?xml version="1.0"?>
<Template>

    <Field id="notificationsHeaderSpace" type="label" fontSize="mini"/>

    <Field id="notificationsLabel" type="label" alignText="right">
        <Label>Plugin Update Notifications (optional)</Label>
    </Field>

    <Field id="separator02" type="separator"/>

    <Field id="space05" type="label" fontSize="small" alignWithControl="True">
        <Label>Receive an email alerting you to plugin updates. This feature sends email through Indigo, so you must connect your Indigo server to a valid email account as well.</Label>
    </Field>

    <Field id="updaterEmailsEnabled" type="checkbox" defaultValue="false"
           tooltip="Enables (disables) email notifications.">
        <Label/>
        <Description>Enable/Disable Notifications</Description>
    </Field>

    <Field id="updaterEmail" type="textfield"
           tooltip="Please enter the email address to receive notifications of updates to the plugin.">
        <Label>Email address:</Label>
    </Field>

</Template>
